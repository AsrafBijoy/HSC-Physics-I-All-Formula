<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="5"
    tools:context=".MainActivity">




    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/FirstChapterId"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st Chapter"
            android:textSize="20dp"
            android:background="@android:color/holo_blue_light"

            />

        <Button
            android:id="@+id/SecndChapterId"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2nd Chapter"
            android:textSize="20dp"
            android:background="@android:color/holo_blue_dark"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@android:color/holo_orange_dark"
            android:id="@+id/thirdchapterId"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3rd Chapter"
            android:textSize="20dp"
            android:textColor="@android:color/holo_green_light"
            />
        <Button
            android:background="@android:color/holo_blue_bright"
            android:id="@+id/fourthchapterId"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4th Chapter"
            android:textSize="20dp"
            android:textColor="@android:color/holo_blue_light"
            />



    </LinearLayout>




    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@android:color/holo_green_light"
            android:id="@+id/fifthethchapterId"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5th Chapter"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            />
        <Button
            android:background="@android:color/holo_orange_light"
            android:id="@+id/sixthchapterid"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6th Chapter"
            android:textSize="20dp"
            android:textColor="@android:color/holo_red_dark"
            />



    </LinearLayout>





    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button

            android:id="@+id/seventhchapterId"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7th Chapter"
            android:textSize="20dp"
            />
        <Button
            android:background="@android:color/holo_red_dark"
            android:id="@+id/eightchapterID"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8th Chapter"
            android:textSize="20dp"
            />



    </LinearLayout>



    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@android:color/darker_gray"
            android:id="@+id/ninethchapterId"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9th Chapter"
            android:textSize="20dp"
            />
        <Button
            android:background="@android:color/holo_red_light"
            android:id="@+id/tenthchapterId"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10th Chapter"
            android:textSize="20dp"
            />



    </LinearLayout>













</LinearLayout>